<?xml version="1.0"?>

<project name="argument" default="help" >

	<description>
		system: "Gobo Argument Parser Tester"
		copyright: "Copyright (c) 2006, Bernd Schoeller and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="init_system"/>
			<redefine target="other_clean"/>
			<redefine target="other_install"/>
		</parent>
	</inherit>


<!-- Implementation -->
	<target name="init_system">
		<set name="system" value="xsystem"/>
		<set name="library" value="system"/>
		<set name="system_dir" value="."/>
	</target>

	<target name="other_clean">
		<!-- delete all generated log's (excluding check files) -->
		<delete>
			<fileset include="*.log" />
		</delete>
		<delete directory="EIFGENs" />
	</target>

	<target name="other_install">
		<geant file="build.eant" dir="../../examples/capture_replay/iteration0/" target="install"/>
		<exec executable="getest --ise"/>
	</target>

	<target name="compile_application">
		<ise ace="application.ecf" system="application" finalize="false" finish_freezing="true"/> 
	</target>

</project>
