<?xml version="1.0"?>

<project name="creation_1" default="help">

	<description>
		system: "'creation_1' test case"
		copyright: "Copyright (c) 2006, Andreas Leitner and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<target name="help">
		<echo message="usage:"/>
		<echo message="   geant compile"/>
		<echo message="   geant clean"/>
		<echo message="   geant clobber"/>
	</target>

	<target name="compile">
		<description>
			Install test case.
		</description>

		<exec executable="ec -config sut/sut.ecf -target sut -c_compile -project_path ./sut"/>
	</target>

	<target name="clean">
		<description>
			Remove generated files.
		</description>
		
		<delete directory="sut/EIFGENs"/>
	</target>

	<target name="clobber" depend="clean">
		<description>
			Remove all generated files.
		</description>
		<delete directory="sut/cdd_test_suite"/>
	</target>

</project>
