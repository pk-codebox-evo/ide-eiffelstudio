class CONSOLE_EVENT_LOG_I

inherit
	EVENT_LOG_FACILITY_I

create
	make

feature -- Modify

	append_event(severity:INTEGER; source, msg:STRING)
		do
			io.put_string(Severities.item(severity) + "    " + facility_interface.app_name + "    " + source + "    " + msg + "%N")
		end

end

