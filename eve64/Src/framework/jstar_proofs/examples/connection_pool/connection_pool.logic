/****************
 *  setof
 *  converts lists to sets. 
 ****************/
rewrite app_setof :
setof(app(?x,?y)) = union(setof(?x),setof(?y))

rewrite cons_setof :
setof(cons(?x,?y)) = add(?x,setof(?y))

rewrite emp_setof :
setof(empty()) = empty()

rewrite union_add_1 :
union(add(?x,?y),?z) = add(?x,union(?y,?z))

rewrite union_add_2 :
union(?z,add(?x,?y)) = add(?x,union(?z,?y))

rule setof :
| | |- setof(?x) = setof(?y) |
without 
  ?x!=?y
if
| | |- ?x=?y |
or
| | |- setof(?x) = setof(?y) * ?x!=?y |



